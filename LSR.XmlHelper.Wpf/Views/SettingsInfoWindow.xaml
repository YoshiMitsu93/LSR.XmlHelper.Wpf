<Window
    x:Class="LSR.XmlHelper.Wpf.Views.SettingsInfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Settings &amp; Info"
    Width="700"
    Height="500"
    Background="{Binding Appearance.SettingsInfoWindowBackgroundBrush}"
    FontFamily="{Binding Appearance.UiFontFamily}"
    FontSize="{Binding Appearance.UiFontSize}"
    Foreground="{Binding Appearance.SettingsInfoWindowTextBrush}"
    Icon="/Assets/AppIcon.ico"
    WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{Binding DataContext.Appearance.SettingsInfoWindowControlBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.SettingsInfoWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.Appearance.SettingsInfoWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{Binding DataContext.Appearance.SettingsInfoWindowButtonBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.SettingsInfoWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.Appearance.SettingsInfoWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="Border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{Binding DataContext.Appearance.SettingsInfoWindowButtonHoverBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.SettingsInfoWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="18" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Width="14"
                                Height="14"
                                VerticalAlignment="Center"
                                Background="{Binding DataContext.Appearance.SettingsInfoWindowCheckBoxBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                BorderBrush="{Binding DataContext.Appearance.SettingsInfoWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                BorderThickness="1" />

                            <Path
                                x:Name="Tick"
                                Width="10"
                                Height="8"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="M 0 4 L 3 7 L 9 0"
                                Fill="{Binding DataContext.Appearance.SettingsInfoWindowCheckBoxTickBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                Stretch="Fill"
                                Visibility="Collapsed" />

                            <ContentPresenter
                                Grid.Column="1"
                                Margin="6,0,0,0"
                                VerticalAlignment="Center" />
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Tick" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.SettingsInfoWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.Appearance.SettingsInfoWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Padding="8,4"
                                Background="{Binding DataContext.Appearance.SettingsInfoWindowHeaderBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1">
                                <ContentPresenter ContentSource="Header" TextElement.Foreground="{Binding DataContext.Appearance.SettingsInfoWindowHeaderTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                            </Border>

                            <Border
                                Grid.Row="1"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1">
                                <ContentPresenter />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock
                FontSize="18"
                FontWeight="SemiBold"
                Text="Settings &amp; Info" />
            <TextBlock
                Margin="0,4,0,0"
                Opacity="0.75"
                Text="{Binding AppVersion, StringFormat=Version: {0}}" />
            <TextBlock
                Margin="0,2,0,0"
                Opacity="0.75"
                Text="Created by Y0sh1M1tsu" />
        </StackPanel>

        <GroupBox
            Grid.Row="1"
            Margin="0,12,0,0"
            Header="Quick toggles">
            <StackPanel Margin="10">
                <TextBlock FontWeight="SemiBold" Text="General" />
                <CheckBox
                    Margin="0,6,0,0"
                    Content="Dark mode"
                    IsChecked="{Binding IsDarkMode}"
                    ToolTip="Toggle dark mode for the application UI." />
                <CheckBox
                    Margin="0,6,0,0"
                    Content="Include subfolders"
                    IsChecked="{Binding IncludeSubfolders}"
                    ToolTip="When enabled, includes XML files from subfolders when loading a folder." />

                <StackPanel
                    Margin="0,10,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Text="View mode:" />
                    <Button
                        Width="90"
                        Click="Folders_Click"
                        Content="Folders"
                        ToolTip="Show the file list grouped by folder tree." />
                    <Button
                        Width="90"
                        Margin="10,0,0,0"
                        Click="Flat_Click"
                        Content="Flat"
                        ToolTip="Show a single flat list of files." />
                </StackPanel>

                <Separator Margin="0,12,0,12" />

                <TextBlock FontWeight="SemiBold" Text="Friendly View" />
                <CheckBox
                    Margin="0,6,0,0"
                    Content="Friendly view"
                    IsChecked="{Binding IsFriendlyView}"
                    ToolTip="Toggle Friendly view (structured view). When off, Raw XML editor is shown." />

                <Separator Margin="0,12,0,12" />

                <TextBlock FontWeight="SemiBold" Text="Raw XML" />
                <CheckBox
                    Margin="0,6,0,0"
                    Content="Scope shading"
                    IsChecked="{Binding IsScopeShadingEnabled}"
                    ToolTip="Toggle nested scope shading in the Raw XML editor." />
                <CheckBox
                    Margin="0,6,0,0"
                    Content="Region highlight"
                    IsChecked="{Binding IsRegionHighlightEnabled}"
                    ToolTip="Toggle highlighting of the current XML region in Raw XML (most visible when the caret is on an opening or closing tag)." />
                <CheckBox
                    Margin="0,6,0,0"
                    Content="Indent guides"
                    IsChecked="{Binding IsIndentGuidesEnabled}"
                    ToolTip="Toggle indentation guide lines in the Raw XML editor." />
                <CheckBox
                    Margin="0,6,0,0"
                    Content="Outline (Tree)"
                    IsChecked="{Binding IsRawOutlineEnabled}"
                    ToolTip="Toggle the Outline panel for Raw XML navigation (tree of elements you can click to jump to)." />
            </StackPanel>
        </GroupBox>

        <GroupBox
            Grid.Row="2"
            Margin="0,12,0,0"
            Header="Info">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Opacity="0.75"
                    Text="Loaded folder:" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    IsReadOnly="True"
                    Text="{Binding LoadedFolderPath, Mode=OneWay}"
                    ToolTip="The folder currently loaded in the app. Copy this path if you need it." />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,8,0,0"
                    Opacity="0.75"
                    Text="Settings file:" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,8,0,0"
                    IsReadOnly="True"
                    Text="{Binding SettingsFilePath, Mode=OneWay}" />

                <StackPanel
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="0,12,0,0"
                    Orientation="Horizontal">
                    <Button
                        Width="120"
                        Command="{Binding OpenRepoCommand}"
                        Content="Open Repo"
                        ToolTip="Open the GitHub repository in your browser." />
                    <Button
                        Width="120"
                        Margin="10,0,0,0"
                        Command="{Binding OpenReleasesCommand}"
                        Content="Open Releases"
                        ToolTip="Open the Releases page to download updates." />
                    <Button
                        Width="160"
                        Margin="10,0,0,0"
                        Command="{Binding OpenSettingsFolderCommand}"
                        Content="Open Settings Folder"
                        ToolTip="Open the folder where your settings file is stored." />
                </StackPanel>
            </Grid>
        </GroupBox>

        <StackPanel
            Grid.Row="3"
            Margin="0,12,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Click="Close_Click"
                Content="Close"
                IsCancel="True"
                ToolTip="Close the Settings &amp; Info window." />
        </StackPanel>
    </Grid>
</Window>
