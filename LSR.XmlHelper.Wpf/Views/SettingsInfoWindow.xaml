<Window x:Class="LSR.XmlHelper.Wpf.Views.SettingsInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings &amp; Info"
        Height="420"
        Width="640"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock FontSize="18" FontWeight="SemiBold" Text="Settings &amp; Info" />
            <TextBlock Margin="0,4,0,0" Opacity="0.75" Text="{Binding AppVersion, StringFormat=Version: {0}}" />
        </StackPanel>

        <GroupBox Grid.Row="1" Header="Quick toggles" Margin="0,12,0,0">
            <StackPanel Margin="10">
                <CheckBox Content="Dark mode" IsChecked="{Binding IsDarkMode}" />
                <CheckBox Margin="0,6,0,0" Content="Friendly view" IsChecked="{Binding IsFriendlyView}" />
                <CheckBox Margin="0,6,0,0" Content="Include subfolders" IsChecked="{Binding IncludeSubfolders}" />

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
                    <TextBlock VerticalAlignment="Center" Text="View mode:" Margin="0,0,10,0"/>
                    <Button Content="Folders" Width="90" Click="Folders_Click"/>
                    <Button Content="Flat" Width="90" Margin="10,0,0,0" Click="Flat_Click"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Info" Margin="0,12,0,0">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Loaded folder:" Grid.Row="0" Grid.Column="0" Opacity="0.75"/>
                <TextBox Text="{Binding LoadedFolderPath}" Grid.Row="0" Grid.Column="1" IsReadOnly="True"/>

                <TextBlock Text="Settings file:" Grid.Row="1" Grid.Column="0" Margin="0,8,0,0" Opacity="0.75"/>
                <TextBox Text="{Binding SettingsFilePath}" Grid.Row="1" Grid.Column="1" Margin="0,8,0,0" IsReadOnly="True"/>

                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,12,0,0">
                    <Button Content="Open Repo" Width="120" Command="{Binding OpenRepoCommand}" />
                    <Button Content="Open Releases" Width="120" Margin="10,0,0,0" Command="{Binding OpenReleasesCommand}" />
                    <Button Content="Open Settings Folder" Width="160" Margin="10,0,0,0" Command="{Binding OpenSettingsFolderCommand}" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Close" Width="100" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
