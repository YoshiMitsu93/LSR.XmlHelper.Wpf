<Window
    x:Class="LSR.XmlHelper.Wpf.Views.SettingsInfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Settings &amp; Info"
    Width="700"
    Height="500"
    Background="{Binding Appearance.SettingsInfoWindowBackgroundBrush}"
    FontFamily="{Binding Appearance.UiFontFamily}"
    FontSize="{Binding Appearance.UiFontSize}"
    Foreground="{Binding Appearance.SettingsInfoWindowTextBrush}"
    Icon="/Assets/AppIcon.ico"
    WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{Binding DataContext.Appearance.SettingsInfoWindowControlBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.SettingsInfoWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.Appearance.SettingsInfoWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{Binding DataContext.Appearance.SettingsInfoWindowButtonBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.SettingsInfoWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.Appearance.SettingsInfoWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="{Binding DataContext.Appearance.SettingsInfoWindowButtonHoverBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.SettingsInfoWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="18" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border Width="14"
                                    Height="14"
                                    VerticalAlignment="Center"
                                    Background="{Binding DataContext.Appearance.SettingsInfoWindowCheckBoxBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                    BorderBrush="{Binding DataContext.Appearance.SettingsInfoWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                    BorderThickness="1" />

                            <Path x:Name="Tick"
                                  Width="10"
                                  Height="8"
                                  Stretch="Fill"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  Fill="{Binding DataContext.Appearance.SettingsInfoWindowCheckBoxTickBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                  Data="M 0 4 L 3 7 L 9 0"
                                  Visibility="Collapsed" />

                            <ContentPresenter Grid.Column="1"
                                              Margin="6,0,0,0"
                                              VerticalAlignment="Center" />
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Tick" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.SettingsInfoWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.Appearance.SettingsInfoWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"
                                    Background="{Binding DataContext.Appearance.SettingsInfoWindowHeaderBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    Padding="8,4">
                                <ContentPresenter ContentSource="Header"
                                                  TextElement.Foreground="{Binding DataContext.Appearance.SettingsInfoWindowHeaderTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                            </Border>

                            <Border Grid.Row="1"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock
                FontSize="18"
                FontWeight="SemiBold"
                Text="Settings &amp; Info" />
            <TextBlock
                Margin="0,4,0,0"
                Opacity="0.75"
                Text="{Binding AppVersion, StringFormat=Version: {0}}" />
            <TextBlock
                Margin="0,2,0,0"
                Opacity="0.75"
                Text="Created by Y0sh1M1tsu" />
        </StackPanel>

        <GroupBox
            Grid.Row="1"
            Margin="0,12,0,0"
            Header="Quick toggles">
            <StackPanel Margin="10">
                <CheckBox Content="Dark mode" IsChecked="{Binding IsDarkMode}" />
                <CheckBox
                    Margin="0,6,0,0"
                    Content="Friendly view"
                    IsChecked="{Binding IsFriendlyView}" />
                <CheckBox
                    Margin="0,6,0,0"
                    Content="Include subfolders"
                    IsChecked="{Binding IncludeSubfolders}" />

                <StackPanel
                    Margin="0,10,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Text="View mode:" />
                    <Button
                        Width="90"
                        Click="Folders_Click"
                        Content="Folders" />
                    <Button
                        Width="90"
                        Margin="10,0,0,0"
                        Click="Flat_Click"
                        Content="Flat" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox
            Grid.Row="2"
            Margin="0,12,0,0"
            Header="Info">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Opacity="0.75"
                    Text="Loaded folder:" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    IsReadOnly="True"
                    Text="{Binding LoadedFolderPath, Mode=OneWay}" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,8,0,0"
                    Opacity="0.75"
                    Text="Settings file:" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,8,0,0"
                    IsReadOnly="True"
                    Text="{Binding SettingsFilePath, Mode=OneWay}" />

                <StackPanel
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="0,12,0,0"
                    Orientation="Horizontal">
                    <Button
                        Width="120"
                        Command="{Binding OpenRepoCommand}"
                        Content="Open Repo" />
                    <Button
                        Width="120"
                        Margin="10,0,0,0"
                        Command="{Binding OpenReleasesCommand}"
                        Content="Open Releases" />
                    <Button
                        Width="160"
                        Margin="10,0,0,0"
                        Command="{Binding OpenSettingsFolderCommand}"
                        Content="Open Settings Folder" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <StackPanel
            Grid.Row="3"
            Margin="0,12,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Content="Close"
                IsCancel="True" Click="Close_Click" />
        </StackPanel>
    </Grid>
</Window>
