<UserControl
    x:Class="LSR.XmlHelper.Wpf.Views.AppearanceTabs.AppearanceEditorTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock
            x:Name="AnchorEditor"
            Style="{DynamicResource SectionHeader}"
            Text="Editor" />

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="6" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="6" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Editor Text"
                ToolTip="Text color inside the raw XML editor." />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding EditorText}"
                ToolTip="Text color inside the raw XML editor." />
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Height="22"
                Background="{Binding PreviewEditorTextBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="EditorText"
                Style="{DynamicResource SwatchButtonStyle}"
                ToolTip="Text color inside the raw XML editor." />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Editor Background"
                ToolTip="Background color inside the raw XML editor." />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding EditorBackground}"
                ToolTip="Background color inside the raw XML editor." />
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Height="22"
                Background="{Binding PreviewEditorBackgroundBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="EditorBackground"
                Style="{DynamicResource SwatchButtonStyle}"
                ToolTip="Background color inside the raw XML editor." />

            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="XML Syntax"
                ToolTip="Overrides the syntax highlight color used for XML tags/attributes. Leave empty to keep default XML colors." />
            <TextBox
                Grid.Row="4"
                Grid.Column="1"
                Text="{Binding EditorXmlSyntaxForeground}"
                ToolTip="Overrides the syntax highlight color used for XML tags/attributes. Leave empty to keep default XML colors." />
            <Button
                Grid.Row="4"
                Grid.Column="2"
                Height="22"
                Background="{Binding PreviewEditorXmlSyntaxForegroundBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="EditorXmlSyntaxForeground"
                Style="{DynamicResource SwatchButtonStyle}"
                ToolTip="Overrides the syntax highlight color used for XML tags/attributes. Leave empty to keep default XML colors." />
        </Grid>
    </StackPanel>
</UserControl>
