<UserControl x:Class="LSR.XmlHelper.Wpf.Views.AppearanceTabs.AppearanceDocumentationTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Padding="6,4"
                   Background="{Binding PreviewAppearanceWindowHeaderBackgroundBrush}"
                   Foreground="{Binding PreviewAppearanceWindowHeaderTextBrush}"
                   Style="{DynamicResource SectionHeader}"
                   Text="Documentation" />

        <TextBlock Margin="0,10,0,0"
                   Padding="6,3"
                   Background="{Binding PreviewAppearanceWindowHeaderBackgroundBrush}"
                   Foreground="{Binding PreviewAppearanceWindowHeaderTextBrush}"
                   Style="{DynamicResource SubHeader}"
                   Text="Colors" />

        <Grid Margin="6,8,6,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Window Background" ToolTip="Background of the documentation window" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding DocumentationWindowBackground}" />
            <Button Grid.Row="0" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewDocumentationWindowBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="DocumentationWindowBackground" />

            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Window Text" ToolTip="Main text color" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding DocumentationWindowText}" />
            <Button Grid.Row="1" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewDocumentationWindowTextBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="DocumentationWindowText" />

            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Control Background" ToolTip="Search box and input backgrounds" />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding DocumentationWindowControlBackground}" />
            <Button Grid.Row="2" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewDocumentationWindowControlBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="DocumentationWindowControlBackground" />

            <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Control Border" ToolTip="Borders around inputs and panels" />
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding DocumentationWindowControlBorder}" />
            <Button Grid.Row="3" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewDocumentationWindowControlBorderBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="DocumentationWindowControlBorder" />

            <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Header Text" ToolTip="Group/category header text" />
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding DocumentationWindowHeaderText}" />
            <Button Grid.Row="4" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewDocumentationWindowHeaderTextBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="DocumentationWindowHeaderText" />

            <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Header Background" ToolTip="Group/category header background" />
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding DocumentationWindowHeaderBackground}" />
            <Button Grid.Row="5" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewDocumentationWindowHeaderBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="DocumentationWindowHeaderBackground" />

            <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="List Hover Background" ToolTip="Hover color for topic list items" />
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding DocumentationWindowListHoverBackground}" />
            <Button Grid.Row="6" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewDocumentationWindowListHoverBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="DocumentationWindowListHoverBackground" />

            <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Text="List Selected Background" ToolTip="Selected topic list item background" />
            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding DocumentationWindowListSelectedBackground}" />
            <Button Grid.Row="7" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewDocumentationWindowListSelectedBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="DocumentationWindowListSelectedBackground" />

            <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="Button Background" ToolTip="Buttons like Close" />
            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding DocumentationWindowButtonBackground}" />
            <Button Grid.Row="8" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewDocumentationWindowButtonBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="DocumentationWindowButtonBackground" />

            <TextBlock Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" Text="Button Hover Background" ToolTip="Button hover color" />
            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding DocumentationWindowButtonHoverBackground}" />
            <Button Grid.Row="9" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewDocumentationWindowButtonHoverBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="DocumentationWindowButtonHoverBackground" />
        </Grid>
    </StackPanel>
</UserControl>
