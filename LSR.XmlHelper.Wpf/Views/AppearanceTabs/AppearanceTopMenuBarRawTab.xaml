<UserControl
    x:Class="LSR.XmlHelper.Wpf.Views.AppearanceTabs.AppearanceTopMenuBarRawTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock
            x:Name="AnchorTopMenuRaw"
            Style="{DynamicResource SectionHeader}"
            Text="Top Menu Bar" />

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="6" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Menu Text"
                ToolTip="Text color for the top menu bar (File/Edit/View/Help)." />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding MenuText}"
                ToolTip="Text color for the top menu bar (File/Edit/View/Help)." />
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Height="22"
                Background="{Binding PreviewMenuTextBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="MenuText"
                Style="{DynamicResource SwatchButtonStyle}"
                ToolTip="Text color for the top menu bar (File/Edit/View/Help)." />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Menu Background"
                ToolTip="Background color for the top menu bar (File/Edit/View/Help)." />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding MenuBackground}"
                ToolTip="Background color for the top menu bar (File/Edit/View/Help)." />
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Height="22"
                Background="{Binding PreviewMenuBackgroundBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="MenuBackground"
                Style="{DynamicResource SwatchButtonStyle}"
                ToolTip="Background color for the top menu bar (File/Edit/View/Help)." />
        </Grid>
        <TextBlock
            Style="{DynamicResource SubHeader}"
            Text="Top File List Items"
            ToolTip="Hover and selection colors for the file list strip at the top." />

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="6" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Item Hover Background"
                ToolTip="Hover highlight for the top file list items." />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding TreeItemHoverBackground}"
                ToolTip="Hover highlight for the top file list items." />
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Height="22"
                Background="{Binding PreviewTreeHoverBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="TreeItemHoverBackground"
                Style="{DynamicResource SwatchButtonStyle}"
                ToolTip="Hover highlight for the top file list items." />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Item Selected Background"
                ToolTip="Selected highlight for the top file list items." />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding TreeItemSelectedBackground}"
                ToolTip="Selected highlight for the top file list items." />
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Height="22"
                Background="{Binding PreviewTreeSelectedBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="TreeItemSelectedBackground"
                Style="{DynamicResource SwatchButtonStyle}"
                ToolTip="Selected highlight for the top file list items." />
        </Grid>
    </StackPanel>
</UserControl>
