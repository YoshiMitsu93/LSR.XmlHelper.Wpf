<UserControl
    x:Class="LSR.XmlHelper.Wpf.Views.AppearanceTabs.AppearanceSettingsInfoTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock
            Padding="6,4"
            Background="{Binding PreviewAppearanceWindowHeaderBackgroundBrush}"
            Foreground="{Binding PreviewAppearanceWindowHeaderTextBrush}"
            Style="{DynamicResource SectionHeader}"
            Text="Settings &amp; Info" />

        <TextBlock
            Margin="0,10,0,0"
            Padding="6,3"
            Background="{Binding PreviewAppearanceWindowHeaderBackgroundBrush}"
            Foreground="{Binding PreviewAppearanceWindowHeaderTextBrush}"
            Style="{DynamicResource SubHeader}"
            Text="Colors" />

        <Grid Margin="6,8,6,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Window Background"
                ToolTip="Background color of the Settings &amp; Info window." />

            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding SettingsInfoWindowBackground}" />
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Margin="10,0,0,0"
                Background="{Binding PreviewSettingsInfoWindowBackgroundBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="SettingsInfoWindowBackground"
                Style="{DynamicResource SwatchButtonStyle}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Window Text"
                ToolTip="Main text color used in the Settings &amp; Info window." />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding SettingsInfoWindowText}" />
            <Button
                Grid.Row="1"
                Grid.Column="2"
                Margin="10,0,0,0"
                Background="{Binding PreviewSettingsInfoWindowTextBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="SettingsInfoWindowText"
                Style="{DynamicResource SwatchButtonStyle}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Center"
                                Text="Control Background" ToolTip="Background color for controls like TextBoxes and panels." />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding SettingsInfoWindowControlBackground}" />
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Margin="10,0,0,0"
                Background="{Binding PreviewSettingsInfoWindowControlBackgroundBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="SettingsInfoWindowControlBackground"
                Style="{DynamicResource SwatchButtonStyle}" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Control Border" ToolTip="Border color for inputs and group sections in Settings &amp; Info." />
            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                Text="{Binding SettingsInfoWindowControlBorder}" />
            <Button
                Grid.Row="3"
                Grid.Column="2"
                Margin="10,0,0,0"
                Background="{Binding PreviewSettingsInfoWindowControlBorderBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="SettingsInfoWindowControlBorder"
                Style="{DynamicResource SwatchButtonStyle}" />

            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Header Text" ToolTip="Text color used for group headers (Quick toggles, Info)." />
            <TextBox
                Grid.Row="4"
                Grid.Column="1"
                Text="{Binding SettingsInfoWindowHeaderText}" />
            <Button
                Grid.Row="4"
                Grid.Column="2"
                Margin="10,0,0,0"
                Background="{Binding PreviewSettingsInfoWindowHeaderTextBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="SettingsInfoWindowHeaderText"
                Style="{DynamicResource SwatchButtonStyle}" />

            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Header Background" ToolTip="Default background color of header backgrounds in Settings &amp; Info." />
            <TextBox
                Grid.Row="5"
                Grid.Column="1"
                Text="{Binding SettingsInfoWindowHeaderBackground}" />
            <Button
                Grid.Row="5"
                Grid.Column="2"
                Margin="10,0,0,0"
                Background="{Binding PreviewSettingsInfoWindowHeaderBackgroundBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="SettingsInfoWindowHeaderBackground"
                Style="{DynamicResource SwatchButtonStyle}" />

            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Button Background" ToolTip="Default background color of buttons in Settings &amp; Info." />
            <TextBox
                Grid.Row="6"
                Grid.Column="1"
                Text="{Binding SettingsInfoWindowButtonBackground}" />
            <Button
                Grid.Row="6"
                Grid.Column="2"
                Margin="10,0,0,0"
                Background="{Binding PreviewSettingsInfoWindowButtonBackgroundBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="SettingsInfoWindowButtonBackground"
                Style="{DynamicResource SwatchButtonStyle}" />

            <TextBlock
                Grid.Row="7"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Button Hover Background" ToolTip="Background color when hovering buttons in Settings &amp; Info." />
            <TextBox
                Grid.Row="7"
                Grid.Column="1"
                Text="{Binding SettingsInfoWindowButtonHoverBackground}" />
            <Button
                Grid.Row="7"
                Grid.Column="2"
                Margin="10,0,0,0"
                Background="{Binding PreviewSettingsInfoWindowButtonHoverBackgroundBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="SettingsInfoWindowButtonHoverBackground"
                Style="{DynamicResource SwatchButtonStyle}" />

            <TextBlock
                Grid.Row="8"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="CheckBox Background" ToolTip="Background color of the checkbox box." />
            <TextBox
                Grid.Row="8"
                Grid.Column="1"
                Text="{Binding SettingsInfoWindowCheckBoxBackground}" />
            <Button
                Grid.Row="8"
                Grid.Column="2"
                Margin="10,0,0,0"
                Background="{Binding PreviewSettingsInfoWindowCheckBoxBackgroundBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="SettingsInfoWindowCheckBoxBackground"
                Style="{DynamicResource SwatchButtonStyle}" />

            <TextBlock
                Grid.Row="9"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="CheckBox Tick" ToolTip="Tick/checkmark color inside checkboxes." />
            <TextBox
                Grid.Row="9"
                Grid.Column="1"
                Text="{Binding SettingsInfoWindowCheckBoxTick}" />
            <Button
                Grid.Row="9"
                Grid.Column="2"
                Margin="10,0,0,0"
                Background="{Binding PreviewSettingsInfoWindowCheckBoxTickBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="SettingsInfoWindowCheckBoxTick"
                Style="{DynamicResource SwatchButtonStyle}" />
        </Grid>
    </StackPanel>
</UserControl>
