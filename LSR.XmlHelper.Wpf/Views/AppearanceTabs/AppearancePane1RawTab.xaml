<UserControl x:Class="LSR.XmlHelper.Wpf.Views.AppearanceTabs.AppearancePane1RawTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock x:Name="AnchorPane1Raw" Text="Pane 1 - File Tree"
                   Style="{DynamicResource SectionHeader}"
                   ToolTip="Colors for the left file/folder tree (Pane 1 in the main window)." />
        <TextBlock Text="Tree &amp; List Items"
                   Style="{DynamicResource SubHeader}"
                   ToolTip="Text and background for the left file/folder tree (Pane 1)." />

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="6" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Tree Text" VerticalAlignment="Center"
                       ToolTip="Text color for the file/folder tree (Pane 1)." />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TreeText}"
                     ToolTip="Text color for the file/folder tree (Pane 1)." />
            <Button Grid.Row="0" Grid.Column="2"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewTreeTextBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="TreeText"
                    Height="22"
                    ToolTip="Text color for the file/folder tree (Pane 1)." />

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Tree Background" VerticalAlignment="Center"
                       ToolTip="Background for the file/folder tree (Pane 1)." />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TreeBackground}"
                     ToolTip="Background for the file/folder tree (Pane 1)." />
            <Button Grid.Row="2" Grid.Column="2"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewTreeBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="TreeBackground"
                    Height="22"
                    ToolTip="Background for the file/folder tree (Pane 1)." />
        </Grid>

        <TextBlock Text="Selection"
                   Style="{DynamicResource SubHeader}"
                   ToolTip="Hover and selected highlights for tree/list items." />

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="6" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Hover Background" VerticalAlignment="Center"
                       ToolTip="Hover highlight for tree/list items across the app." />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TreeItemHoverBackground}"
                     ToolTip="Hover highlight for tree/list items across the app." />
            <Button Grid.Row="0" Grid.Column="2"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewTreeHoverBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="TreeItemHoverBackground"
                    Height="22"
                    ToolTip="Hover highlight for tree/list items across the app." />

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Selected Background" VerticalAlignment="Center"
                       ToolTip="Selected highlight for tree/list items across the app." />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TreeItemSelectedBackground}"
                     ToolTip="Selected highlight for tree/list items across the app." />
            <Button Grid.Row="2" Grid.Column="2"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewTreeSelectedBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="TreeItemSelectedBackground"
                    Height="22"
                    ToolTip="Selected highlight for tree/list items across the app." />
        </Grid>
    </StackPanel>
</UserControl>
