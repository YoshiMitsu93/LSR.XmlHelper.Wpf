<UserControl
    x:Class="LSR.XmlHelper.Wpf.Views.AppearanceTabs.AppearancePane1FriendlyTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Style="{DynamicResource SubHeader}" Text="Tree / Selectors" />

        <TextBlock
            x:Name="AnchorPane1Friendly"
            Style="{DynamicResource SectionHeader}"
            Text="Pane 1 - File Tree / File List"
            ToolTip="Colors for the left file/folder tree and file list (Pane 1 in the main window)." />

        <TextBlock
            Style="{DynamicResource SubHeader}"
            Text="Tree &amp; List Items"
            ToolTip="Text and background for items in the left file tree and file list (Pane 1)." />

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="6" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Tree Text"
                ToolTip="Text color for the left file tree/file list (Pane 1)." />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding TreeText}"
                ToolTip="Text color for the left file tree/file list (Pane 1)." />
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Height="22"
                Background="{Binding PreviewTreeTextBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="TreeText"
                Style="{DynamicResource SwatchButtonStyle}"
                ToolTip="Text color for the left file tree/file list (Pane 1)." />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Tree Background"
                ToolTip="Background color for the left file tree/file list (Pane 1). Use #00000000 for transparent." />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding TreeBackground}"
                ToolTip="Background color for the left file tree/file list (Pane 1). Use #00000000 for transparent." />
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Height="22"
                Background="{Binding PreviewTreeBackgroundBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="TreeBackground"
                Style="{DynamicResource SwatchButtonStyle}"
                ToolTip="Background color for the left file tree/file list (Pane 1). Use #00000000 for transparent." />
        </Grid>

        <TextBlock
            Style="{DynamicResource SubHeader}"
            Text="Selection"
            ToolTip="Hover and selected highlights for file tree/list items." />

        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="6" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Hover Background"
                ToolTip="Hover highlight for items in the left file tree/file list (Pane 1)." />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding Pane1TreeItemHoverBackground}"
                ToolTip="Hover highlight for items in the left file tree/file list (Pane 1)." />
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Height="22"
                Background="{Binding PreviewPane1TreeHoverBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="Pane1TreeItemHoverBackground"
                Style="{DynamicResource SwatchButtonStyle}"
                ToolTip="Hover highlight for items in the left file tree/file list (Pane 1)." />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Selected Background"
                ToolTip="Selected highlight for items in the left file tree/file list (Pane 1)." />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding Pane1TreeItemSelectedBackground}"
                ToolTip="Selected highlight for items in the left file tree/file list (Pane 1)." />
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Height="22"
                Background="{Binding PreviewPane1TreeSelectedBrush}"
                Command="{Binding PickColorCommand}"
                CommandParameter="Pane1TreeItemSelectedBackground"
                Style="{DynamicResource SwatchButtonStyle}"
                ToolTip="Selected highlight for items in the left file tree/file list (Pane 1)." />
        </Grid>
    </StackPanel>
</UserControl>
