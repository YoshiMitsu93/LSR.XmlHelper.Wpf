<UserControl x:Class="LSR.XmlHelper.Wpf.Views.AppearanceTabs.AppearanceXmlGuidesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Padding="6,4"
                   Background="{Binding PreviewAppearanceWindowHeaderBackgroundBrush}"
                   Foreground="{Binding PreviewAppearanceWindowHeaderTextBrush}"
                   Style="{DynamicResource SectionHeader}"
                   Text="LSR XML Guides" />

        <TextBlock Margin="0,10,0,0"
                   Padding="6,3"
                   Background="{Binding PreviewAppearanceWindowHeaderBackgroundBrush}"
                   Foreground="{Binding PreviewAppearanceWindowHeaderTextBrush}"
                   Style="{DynamicResource SubHeader}"
                   Text="Window" />

        <Grid Margin="6,8,6,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Background" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding XmlGuidesWindowBackground}" />
            <Button Grid.Row="0" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowBackground" />

            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Text" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding XmlGuidesWindowText}" />
            <Button Grid.Row="1" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowTextBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowText" />

            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Control Background" />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding XmlGuidesWindowControlBackground}" />
            <Button Grid.Row="2" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowControlBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowControlBackground" />

            <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Control Border" />
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding XmlGuidesWindowControlBorder}" />
            <Button Grid.Row="3" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowControlBorderBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowControlBorder" />
        </Grid>

        <TextBlock Margin="0,14,0,0"
                   Padding="6,3"
                   Background="{Binding PreviewAppearanceWindowHeaderBackgroundBrush}"
                   Foreground="{Binding PreviewAppearanceWindowHeaderTextBrush}"
                   Style="{DynamicResource SubHeader}"
                   Text="Buttons" />

        <Grid Margin="6,8,6,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Background" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding XmlGuidesWindowButtonBackground}" />
            <Button Grid.Row="0" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowButtonBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowButtonBackground" />

            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Text" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding XmlGuidesWindowButtonText}" />
            <Button Grid.Row="1" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowButtonTextBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowButtonText" />

            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Hover Background" />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding XmlGuidesWindowButtonHoverBackground}" />
            <Button Grid.Row="2" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowButtonHoverBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowButtonHoverBackground" />

            <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Hover Text" />
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding XmlGuidesWindowButtonHoverText}" />
            <Button Grid.Row="3" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowButtonHoverTextBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowButtonHoverText" />
        </Grid>

        <TextBlock Margin="0,14,0,0"
                   Padding="6,3"
                   Background="{Binding PreviewAppearanceWindowHeaderBackgroundBrush}"
                   Foreground="{Binding PreviewAppearanceWindowHeaderTextBrush}"
                   Style="{DynamicResource SubHeader}"
                   Text="Guides list (left)" />

        <Grid Margin="6,8,6,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Background" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding XmlGuidesWindowGuidesListBackground}" />
            <Button Grid.Row="0" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowGuidesListBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowGuidesListBackground" />

            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Text" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding XmlGuidesWindowGuidesListText}" />
            <Button Grid.Row="1" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowGuidesListTextBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowGuidesListText" />

            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Item Hover Background" />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding XmlGuidesWindowGuidesListItemHoverBackground}" />
            <Button Grid.Row="2" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowGuidesListItemHoverBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowGuidesListItemHoverBackground" />

            <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Item Hover Text" />
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding XmlGuidesWindowGuidesListItemHoverText}" />
            <Button Grid.Row="3" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowGuidesListItemHoverTextBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowGuidesListItemHoverText" />

            <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Item Selected Background" />
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding XmlGuidesWindowGuidesListItemSelectedBackground}" />
            <Button Grid.Row="4" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowGuidesListItemSelectedBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowGuidesListItemSelectedBackground" />

            <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Item Selected Text" />
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding XmlGuidesWindowGuidesListItemSelectedText}" />
            <Button Grid.Row="5" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowGuidesListItemSelectedTextBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowGuidesListItemSelectedText" />
        </Grid>

        <TextBlock Margin="0,14,0,0"
                   Padding="6,3"
                   Background="{Binding PreviewAppearanceWindowHeaderBackgroundBrush}"
                   Foreground="{Binding PreviewAppearanceWindowHeaderTextBrush}"
                   Style="{DynamicResource SubHeader}"
                   Text="Font pickers" />

        <Grid Margin="6,8,6,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Font + Size Text" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding XmlGuidesWindowFontPickerText}" />
            <Button Grid.Row="0" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewXmlGuidesWindowFontPickerTextBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="XmlGuidesWindowFontPickerText" />
        </Grid>
    </StackPanel>
</UserControl>
