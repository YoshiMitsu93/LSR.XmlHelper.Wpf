 <UserControl x:Class="LSR.XmlHelper.Wpf.Views.AppearanceTabs.AppearanceCompareXmlTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Compare XML"
                   Foreground="{Binding PreviewAppearanceWindowHeaderTextBrush}"
                   Background="{Binding PreviewAppearanceWindowHeaderBackgroundBrush}"
                   Padding="6,4"
                   Style="{DynamicResource SectionHeader}" />

        <TextBlock Text="Colors"
                   Foreground="{Binding PreviewAppearanceWindowHeaderTextBrush}"
                   Background="{Binding PreviewAppearanceWindowHeaderBackgroundBrush}"
                   Padding="6,3"
                   Margin="0,10,0,0"
                   Style="{DynamicResource SubHeader}" />

        <Grid Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Window Background" ToolTip="Background color of the Compare XML window." />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CompareXmlWindowBackground}" />
            <Button Grid.Row="0" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewCompareXmlWindowBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="CompareXmlWindowBackground" />

            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Window Text" ToolTip="Main text color used in the Compare XML window." />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CompareXmlWindowText}" />
            <Button Grid.Row="1" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewCompareXmlWindowTextBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="CompareXmlWindowText" />

            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Control Background" ToolTip="Background color for controls like inputs and panels." />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CompareXmlWindowControlBackground}" />
            <Button Grid.Row="2" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewCompareXmlWindowControlBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="CompareXmlWindowControlBackground" />

            <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Control Border" ToolTip="Border color for inputs and panels in the Compare XML window." />
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CompareXmlWindowControlBorder}" />
            <Button Grid.Row="3" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewCompareXmlWindowControlBorderBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="CompareXmlWindowControlBorder" />

            <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Header Text" ToolTip="Text color used for section headers." />
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding CompareXmlWindowHeaderText}" />
            <Button Grid.Row="4" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewCompareXmlWindowHeaderTextBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="CompareXmlWindowHeaderText" />

            <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Header Background" ToolTip="Background color used for section headers." />
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding CompareXmlWindowHeaderBackground}" />
            <Button Grid.Row="5" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewCompareXmlWindowHeaderBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="CompareXmlWindowHeaderBackground" />

            <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Button Background" ToolTip="Background color of buttons in the Compare XML window." />
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CompareXmlWindowButtonBackground}" />
            <Button Grid.Row="6" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewCompareXmlWindowButtonBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="CompareXmlWindowButtonBackground" />

            <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Text="Button Hover Background" ToolTip="Background color when hovering buttons." />
            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding CompareXmlWindowButtonHoverBackground}" />
            <Button Grid.Row="7" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewCompareXmlWindowButtonHoverBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="CompareXmlWindowButtonHoverBackground" />

            <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="Edits Hover Background" ToolTip="Background color when hovering items/rows in the edits list." />
            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding CompareXmlWindowEditsHoverBackground}" />
            <Button Grid.Row="8" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewCompareXmlWindowEditsHoverBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="CompareXmlWindowEditsHoverBackground" />

            <TextBlock Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" Text="Checkbox Background" ToolTip="Background color of checkboxes." />
            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding CompareXmlWindowCheckBoxBackground}" />
            <Button Grid.Row="9" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewCompareXmlWindowCheckBoxBackgroundBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="CompareXmlWindowCheckBoxBackground" />

            <TextBlock Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" Text="Checkbox Tick" ToolTip="Tick/checkmark color inside checkboxes." />
            <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding CompareXmlWindowCheckBoxTick}" />
            <Button Grid.Row="10" Grid.Column="2"
                    Margin="10,0,0,0"
                    Style="{DynamicResource SwatchButtonStyle}"
                    Background="{Binding PreviewCompareXmlWindowCheckBoxTickBrush}"
                    Command="{Binding PickColorCommand}"
                    CommandParameter="CompareXmlWindowCheckBoxTick" />
        </Grid>
    </StackPanel>
</UserControl>
