<UserControl x:Class="LSR.XmlHelper.Wpf.Views.AppearanceTabs.AppearanceBackupBrowserTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Backup Browser"
                   Foreground="{Binding PreviewAppearanceWindowHeaderTextBrush}"
                   Background="{Binding PreviewAppearanceWindowHeaderBackgroundBrush}"
                   Padding="6,4"
                   Style="{DynamicResource SectionHeader}" />

        <TextBlock Text="Colors"
                   Foreground="{Binding PreviewAppearanceWindowHeaderTextBrush}"
                   Background="{Binding PreviewAppearanceWindowHeaderBackgroundBrush}"
                   Padding="6,3"
                   Margin="0,10,0,0"
                   Style="{DynamicResource SubHeader}" />

        <Grid Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Window Background" ToolTip="Background color of the Backup Browser window." />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding BackupBrowserWindowBackground}" />
            <Button Grid.Row="0" Grid.Column="2"
	                    Margin="10,0,0,0"
	                    Style="{DynamicResource SwatchButtonStyle}"
	                    Background="{Binding PreviewBackupBrowserWindowBackgroundBrush}"
	                    Command="{Binding PickColorCommand}"
	                    CommandParameter="BackupBrowserWindowBackground" />

            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Window Text" ToolTip="Main text color used in the Backup Browser window." />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding BackupBrowserWindowText}" />
            <Button Grid.Row="1" Grid.Column="2"
	                    Margin="10,0,0,0"
	                    Style="{DynamicResource SwatchButtonStyle}"
	                    Background="{Binding PreviewBackupBrowserWindowTextBrush}"
	                    Command="{Binding PickColorCommand}"
	                    CommandParameter="BackupBrowserWindowText" />

            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Control Background" ToolTip="Background color for controls like inputs and panels." />
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding BackupBrowserWindowControlBackground}" />
            <Button Grid.Row="2" Grid.Column="2"
	                    Margin="10,0,0,0"
	                    Style="{DynamicResource SwatchButtonStyle}"
	                    Background="{Binding PreviewBackupBrowserWindowControlBackgroundBrush}"
	                    Command="{Binding PickColorCommand}"
	                    CommandParameter="BackupBrowserWindowControlBackground" />

            <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Control Border" ToolTip="Border color for inputs and panels in the Backup Browser window." />
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding BackupBrowserWindowControlBorder}" />
            <Button Grid.Row="3" Grid.Column="2"
	                    Margin="10,0,0,0"
	                    Style="{DynamicResource SwatchButtonStyle}"
	                    Background="{Binding PreviewBackupBrowserWindowControlBorderBrush}"
	                    Command="{Binding PickColorCommand}"
	                    CommandParameter="BackupBrowserWindowControlBorder" />

            <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Header Text" ToolTip="Text color used for section headers." />
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding BackupBrowserWindowHeaderText}" />
            <Button Grid.Row="4" Grid.Column="2"
	                    Margin="10,0,0,0"
	                    Style="{DynamicResource SwatchButtonStyle}"
	                    Background="{Binding PreviewBackupBrowserWindowHeaderTextBrush}"
	                    Command="{Binding PickColorCommand}"
	                    CommandParameter="BackupBrowserWindowHeaderText" />

            <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Header Background" ToolTip="Background color used for section headers." />
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding BackupBrowserWindowHeaderBackground}" />
            <Button Grid.Row="5" Grid.Column="2"
	                    Margin="10,0,0,0"
	                    Style="{DynamicResource SwatchButtonStyle}"
	                    Background="{Binding PreviewBackupBrowserWindowHeaderBackgroundBrush}"
	                    Command="{Binding PickColorCommand}"
	                    CommandParameter="BackupBrowserWindowHeaderBackground" />

            <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="XML Filter Hover Background" ToolTip="Background color when hovering an XML filter item." />
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding BackupBrowserWindowXmlFilterHoverBackground}" />
            <Button Grid.Row="6" Grid.Column="2"
	                    Margin="10,0,0,0"
	                    Style="{DynamicResource SwatchButtonStyle}"
	                    Background="{Binding PreviewBackupBrowserWindowXmlFilterHoverBackgroundBrush}"
	                    Command="{Binding PickColorCommand}"
	                    CommandParameter="BackupBrowserWindowXmlFilterHoverBackground" />

            <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Text="XML Filter Selected Background" ToolTip="Background color for the selected XML filter item." />
            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding BackupBrowserWindowXmlFilterSelectedBackground}" />
            <Button Grid.Row="7" Grid.Column="2"
	                    Margin="10,0,0,0"
	                    Style="{DynamicResource SwatchButtonStyle}"
	                    Background="{Binding PreviewBackupBrowserWindowXmlFilterSelectedBackgroundBrush}"
	                    Command="{Binding PickColorCommand}"
	                    CommandParameter="BackupBrowserWindowXmlFilterSelectedBackground" />

            <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="List Hover Background" ToolTip="Background color when hovering a list row in the Backup Browser." />
            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding BackupBrowserWindowListHoverBackground}" />
            <Button Grid.Row="8" Grid.Column="2"
	                    Margin="10,0,0,0"
	                    Style="{DynamicResource SwatchButtonStyle}"
	                    Background="{Binding PreviewBackupBrowserWindowListHoverBackgroundBrush}"
	                    Command="{Binding PickColorCommand}"
	                    CommandParameter="BackupBrowserWindowListHoverBackground" />

            <TextBlock Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" Text="List Selected Background" ToolTip="Background color for the selected list row in the Backup Browser." />
            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding BackupBrowserWindowListSelectedBackground}" />
            <Button Grid.Row="9" Grid.Column="2"
	                    Margin="10,0,0,0"
	                    Style="{DynamicResource SwatchButtonStyle}"
	                    Background="{Binding PreviewBackupBrowserWindowListSelectedBackgroundBrush}"
	                    Command="{Binding PickColorCommand}"
	                    CommandParameter="BackupBrowserWindowListSelectedBackground" />

            <TextBlock Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" Text="Button Background" ToolTip="Background color of buttons in the Backups Browser."  />
            <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding BackupBrowserWindowButtonBackground}" />
            <Button Grid.Row="10" Grid.Column="2"
	                    Margin="10,0,0,0"
	                    Style="{DynamicResource SwatchButtonStyle}"
	                    Background="{Binding PreviewBackupBrowserWindowButtonBackgroundBrush}"
	                    Command="{Binding PickColorCommand}"
	                    CommandParameter="BackupBrowserWindowButtonBackground" />

            <TextBlock Grid.Row="11" Grid.Column="0" VerticalAlignment="Center" Text="Button Hover Background" ToolTip="Background color when hovering buttons." />
            <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding BackupBrowserWindowButtonHoverBackground}" />
            <Button Grid.Row="11" Grid.Column="2"
	                    Margin="10,0,0,0"
	                    Style="{DynamicResource SwatchButtonStyle}"
	                    Background="{Binding PreviewBackupBrowserWindowButtonHoverBackgroundBrush}"
	                    Command="{Binding PickColorCommand}"
	                    CommandParameter="BackupBrowserWindowButtonHoverBackground" />
        </Grid>
    </StackPanel>
</UserControl>
