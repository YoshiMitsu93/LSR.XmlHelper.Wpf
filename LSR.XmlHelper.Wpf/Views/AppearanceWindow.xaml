                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewFieldColumnTextBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="FieldColumnText"
                                Height="22"
                                ToolTip="Text color for the Field column (left column) in the details grid." />
                    </Grid>
                    <TextBlock Text="Value Column"
                               Style="{StaticResource SubHeader}"
                               ToolTip="Applies to the Value column (right column) inside the details grid." />
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Value Column Text" VerticalAlignment="Center"
                                   ToolTip="Text color for the Value column (right column) in the details grid." />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ValueColumnText}"
                                 ToolTip="Text color for the Value column (right column) in the details grid." />
                        <Button Grid.Row="0" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewValueColumnTextBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="ValueColumnText"
                                Height="22"
                                ToolTip="Text color for the Value column (right column) in the details grid." />
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Value Column Background"
                                   VerticalAlignment="Center"
                                   ToolTip="Base background for the Value column (right column). Use #00000000 for transparent." />
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding ValueColumnBackground}"
                                 ToolTip="Base background for the Value column (right column). Use #00000000 for transparent." />
                        <Button Grid.Row="2" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewValueColumnBackgroundBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="ValueColumnBackground"
                                Height="22"
                                ToolTip="Base background for the Value column (right column). Use #00000000 for transparent." />
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <DockPanel Grid.Row="2" LastChildFill="False">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Apply" MinWidth="90" Margin="0,0,8,0" Command="{Binding ApplyCommand}" />
                <Button Content="OK" MinWidth="90" Margin="0,0,8,0" Command="{Binding OkCommand}" />
                <Button Content="Cancel" MinWidth="90" Command="{Binding CancelCommand}" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
