<Window x:Class="LSR.XmlHelper.Wpf.Views.AppearanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:infra="clr-namespace:LSR.XmlHelper.Wpf.Infrastructure"
        Title="Appearance"
        Width="720"
        Height="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <infra:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis" />

        <Style x:Key="SwatchButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#FF999999" />
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Editing:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0" />
                <RadioButton Content="Dark" GroupName="Theme" IsChecked="{Binding IsEditingDarkMode}" Margin="0,0,10,0" />
                <RadioButton Content="Light" GroupName="Theme" IsChecked="{Binding IsEditingLightMode}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Applies to:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0" />
                <RadioButton Content="Friendly view" GroupName="Target" IsChecked="{Binding IsEditingFriendlyView}" Margin="0,0,10,0" />
                <RadioButton Content="Raw XML" GroupName="Target" IsChecked="{Binding IsEditingRawXml}" />
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">

                <TextBlock Text="Fonts" FontWeight="Bold" Margin="0,0,0,8" />

                <Grid Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="UI Font" VerticalAlignment="Center"
                               ToolTip="Font used by the general application UI." />
                    <ComboBox Grid.Row="0" Grid.Column="1"
                              ItemsSource="{Binding FontFamilies}"
                              SelectedItem="{Binding UiFontFamily}"
                              IsEditable="True" />
                    <TextBox Grid.Row="0" Grid.Column="2"
                             Text="{Binding UiFontSize}"
                             VerticalContentAlignment="Center" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Editor Font" VerticalAlignment="Center"
                               ToolTip="Font used by the raw XML editor." />
                    <ComboBox Grid.Row="2" Grid.Column="1"
                              ItemsSource="{Binding FontFamilies}"
                              SelectedItem="{Binding EditorFontFamily}"
                              IsEditable="True" />
                    <TextBox Grid.Row="2" Grid.Column="2"
                             Text="{Binding EditorFontSize}"
                             VerticalContentAlignment="Center" />
                </Grid>

                <TextBlock Text="Colors (Hex: #AARRGGBB or #RRGGBB)" FontWeight="Bold" Margin="0,0,0,8" />

                <!-- RAW XML OPTIONS ONLY -->
                <Grid Margin="0,0,0,14"
                      Visibility="{Binding IsEditingRawXml, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="240" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Editor Text" VerticalAlignment="Center"
                               ToolTip="Text color inside the raw XML editor." />
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding EditorText}" />
                    <Button Grid.Row="0" Grid.Column="2"
                            Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewEditorTextBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="EditorText"
                            Height="22" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Editor Background" VerticalAlignment="Center"
                               ToolTip="Background color inside the raw XML editor." />
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding EditorBackground}" />
                    <Button Grid.Row="2" Grid.Column="2"
                            Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewEditorBackgroundBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="EditorBackground"
                            Height="22" />

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Menu Text" VerticalAlignment="Center"
                               ToolTip="Text color for the top menu bar (File/Edit/View/Help)." />
                    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding MenuText}" />
                    <Button Grid.Row="4" Grid.Column="2"
                            Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewMenuTextBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="MenuText"
                            Height="22" />

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Menu Background" VerticalAlignment="Center"
                               ToolTip="Background color for the top menu bar (File/Edit/View/Help)." />
                    <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding MenuBackground}" />
                    <Button Grid.Row="6" Grid.Column="2"
                            Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewMenuBackgroundBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="MenuBackground"
                            Height="22" />
                </Grid>

                <!-- FRIENDLY VIEW OPTIONS ONLY -->
                <Grid Margin="0,0,0,14"
                      Visibility="{Binding IsEditingFriendlyView, Converter={StaticResource BoolToVis}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="240" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Tree Text" VerticalAlignment="Center"
                               ToolTip="Text color for the file list/tree and the friendly selectors list." />
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TreeText}" />
                    <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewTreeTextBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="TreeText"
                            Height="22" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Tree Background" VerticalAlignment="Center"
                               ToolTip="Background for the file list/tree and friendly selectors list." />
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TreeBackground}" />
                    <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewTreeBackgroundBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="TreeBackground"
                            Height="22" />

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Tree Hover Background" VerticalAlignment="Center"
                               ToolTip="Hover background for items in the file list/tree." />
                    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TreeItemHoverBackground}" />
                    <Button Grid.Row="4" Grid.Column="2" Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewTreeHoverBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="TreeItemHoverBackground"
                            Height="22" />

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Tree Selected Background" VerticalAlignment="Center"
                               ToolTip="Selected background for items in the file list/tree." />
                    <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding TreeItemSelectedBackground}" />
                    <Button Grid.Row="6" Grid.Column="2" Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewTreeSelectedBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="TreeItemSelectedBackground"
                            Height="22" />

                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Grid Background" VerticalAlignment="Center"
                               ToolTip="Background for friendly view tables." />
                    <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding GridBackground}" />
                    <Button Grid.Row="8" Grid.Column="2" Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewGridBackgroundBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="GridBackground"
                            Height="22" />

                    <TextBlock Grid.Row="10" Grid.Column="0" Text="Grid Text" VerticalAlignment="Center"
                               ToolTip="Default text color inside friendly view tables." />
                    <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding GridText}" />
                    <Button Grid.Row="10" Grid.Column="2" Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewGridTextBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="GridText"
                            Height="22" />

                    <TextBlock Grid.Row="12" Grid.Column="0" Text="Grid Border" VerticalAlignment="Center"
                               ToolTip="Gridline/border color for friendly view tables." />
                    <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding GridBorder}" />
                    <Button Grid.Row="12" Grid.Column="2" Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewGridBorderBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="GridBorder"
                            Height="22" />

                    <TextBlock Grid.Row="14" Grid.Column="0" Text="Grid Row Hover Background" VerticalAlignment="Center"
                               ToolTip="Row hover background for friendly view tables." />
                    <TextBox Grid.Row="14" Grid.Column="1" Text="{Binding GridRowHoverBackground}" />
                    <Button Grid.Row="14" Grid.Column="2" Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewGridRowHoverBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="GridRowHoverBackground"
                            Height="22" />

                    <TextBlock Grid.Row="16" Grid.Column="0" Text="Field Column Text" VerticalAlignment="Center"
                               ToolTip="Text color for the left column (Field) in friendly view tables." />
                    <TextBox Grid.Row="16" Grid.Column="1" Text="{Binding FieldColumnText}" />
                    <Button Grid.Row="16" Grid.Column="2" Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewFieldColumnTextBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="FieldColumnText"
                            Height="22" />

                    <TextBlock Grid.Row="18" Grid.Column="0" Text="Value Column Text" VerticalAlignment="Center"
                               ToolTip="Text color for the right column (Value) in friendly view tables." />
                    <TextBox Grid.Row="18" Grid.Column="1" Text="{Binding ValueColumnText}" />
                    <Button Grid.Row="18" Grid.Column="2" Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewValueColumnTextBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="ValueColumnText"
                            Height="22" />

                    <TextBlock Grid.Row="20" Grid.Column="0" Text="Selector Text" VerticalAlignment="Center"
                               ToolTip="Text color for friendly view selectors (Agency dropdown + entries list)." />
                    <TextBox Grid.Row="20" Grid.Column="1" Text="{Binding HeaderText}" />
                    <Button Grid.Row="20" Grid.Column="2" Style="{StaticResource SwatchButtonStyle}"
                            Background="{Binding PreviewHeaderTextBrush}"
                            Command="{Binding PickColorCommand}"
                            CommandParameter="HeaderText"
                            Height="22" />
                </Grid>

            </StackPanel>
        </ScrollViewer>

        <DockPanel Grid.Row="2" LastChildFill="False">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Apply" MinWidth="90" Margin="0,0,8,0" Command="{Binding ApplyCommand}" />
                <Button Content="OK" MinWidth="90" Margin="0,0,8,0" Command="{Binding OkCommand}" />
                <Button Content="Cancel" MinWidth="90" Command="{Binding CancelCommand}" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
