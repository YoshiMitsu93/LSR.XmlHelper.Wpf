                        <TextBlock Grid.Row="10" Grid.Column="0" Text="Dropdown Background" VerticalAlignment="Center"
           ToolTip="Background color for the Pane 2 selector ComboBox dropdown list. Use #00000000 for transparent." />
                        <TextBox Grid.Row="10" Grid.Column="1"
         Text="{Binding Pane2DropdownBackground, UpdateSourceTrigger=PropertyChanged}"
         ToolTip="Background color for the Pane 2 selector ComboBox dropdown list. Use #00000000 for transparent." />
                        <Button Grid.Row="10" Grid.Column="2"
        Style="{StaticResource SwatchButtonStyle}"
        Background="{Binding PreviewPane2DropdownBackgroundBrush}"
