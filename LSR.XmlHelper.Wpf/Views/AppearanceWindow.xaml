<Window x:Class="LSR.XmlHelper.Wpf.Views.AppearanceWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:infra="clr-namespace:LSR.XmlHelper.Wpf.Infrastructure"
        Title="Appearance"
        Width="720"
        Height="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <infra:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis" />
        <infra:InverseBooleanConverter x:Key="InverseBool" />
        <Style x:Key="SwatchButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#FF999999" />
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SectionHeader" TargetType="{x:Type TextBlock}">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0,18,0,10" />
        </Style>
        <Style x:Key="SubHeader" TargetType="{x:Type TextBlock}">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,6,0,6" />
        </Style>
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Editing:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0" />
                <RadioButton Content="Dark"
             GroupName="Theme"
             IsChecked="{Binding IsEditingDarkMode, Mode=TwoWay}"
             Margin="0,0,10,0" />
                <RadioButton Content="Light"
             GroupName="Theme"
             IsChecked="{Binding IsEditingDarkMode, Mode=TwoWay, Converter={StaticResource InverseBool}}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Applies to:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0" />
                <RadioButton Content="Friendly view"
             GroupName="Target"
             IsChecked="{Binding IsEditingFriendlyView, Mode=TwoWay}"
             Margin="0,0,10,0" />
                <RadioButton Content="Raw XML"
             GroupName="Target"
             IsChecked="{Binding IsEditingFriendlyView, Mode=TwoWay, Converter={StaticResource InverseBool}}" />
            </StackPanel>
        </StackPanel>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Fonts" Style="{StaticResource SectionHeader}" />
                <StackPanel Visibility="{Binding IsEditingFriendlyView, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Friendly view UI" Style="{StaticResource SubHeader}" />
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="UI Font"
                                   VerticalAlignment="Center"
                                   ToolTip="Font used by the general application UI." />
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding FontFamilies}"
                                  SelectedItem="{Binding UiFontFamily}"
                                  IsEditable="True"
                                  ToolTip="Font used by the general application UI." />
                        <TextBox Grid.Column="2"
                                 Text="{Binding UiFontSize}"
                                 VerticalContentAlignment="Center"
                                 ToolTip="Font size used by the general application UI." />
                    </Grid>
                </StackPanel>
                <StackPanel Visibility="{Binding IsEditingRawXml, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Raw XML editor" Style="{StaticResource SubHeader}" />
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Editor Font"
                                   VerticalAlignment="Center"
                                   ToolTip="Font used by the raw XML editor." />
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding FontFamilies}"
                                  SelectedItem="{Binding EditorFontFamily}"
                                  IsEditable="True"
                                  ToolTip="Font used by the raw XML editor." />
                        <TextBox Grid.Column="2"
                                 Text="{Binding EditorFontSize}"
                                 VerticalContentAlignment="Center"
                                 ToolTip="Font size used by the raw XML editor." />
                    </Grid>
                </StackPanel>
                <TextBlock Text="Colors (Hex: #AARRGGBB or #RRGGBB)" Style="{StaticResource SectionHeader}" />
                <!-- RAW XML -->
                <StackPanel Visibility="{Binding IsEditingRawXml, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Editor" Style="{StaticResource SectionHeader}" />
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Editor Text" VerticalAlignment="Center"
                                   ToolTip="Text color inside the raw XML editor." />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding EditorText}"
                                 ToolTip="Text color inside the raw XML editor." />
                        <Button Grid.Row="0" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewEditorTextBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="EditorText"
                                Height="22"
                                ToolTip="Text color inside the raw XML editor." />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Editor Background" VerticalAlignment="Center"
                                   ToolTip="Background color inside the raw XML editor." />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding EditorBackground}"
                                 ToolTip="Background color inside the raw XML editor." />
                        <Button Grid.Row="2" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewEditorBackgroundBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="EditorBackground"
                                Height="22"
                                ToolTip="Background color inside the raw XML editor." />
                    </Grid>
                    <TextBlock Text="Top Menu Bar" Style="{StaticResource SectionHeader}" />
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Menu Text" VerticalAlignment="Center"
                                   ToolTip="Text color for the top menu bar (File/Edit/View/Help)." />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding MenuText}"
                                 ToolTip="Text color for the top menu bar (File/Edit/View/Help)." />
                        <Button Grid.Row="0" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewMenuTextBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="MenuText"
                                Height="22"
                                ToolTip="Text color for the top menu bar (File/Edit/View/Help)." />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Menu Background" VerticalAlignment="Center"
                                   ToolTip="Background color for the top menu bar (File/Edit/View/Help)." />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding MenuBackground}"
                                 ToolTip="Background color for the top menu bar (File/Edit/View/Help)." />
                        <Button Grid.Row="2" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewMenuBackgroundBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="MenuBackground"
                                Height="22"
                                ToolTip="Background color for the top menu bar (File/Edit/View/Help)." />
                    </Grid>
                    <TextBlock Text="Top Bar Controls" Style="{StaticResource SectionHeader}" />
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Top Bar Text" VerticalAlignment="Center"
               ToolTip="Text colour for: View, Folders, Flat, Include subfolders, Friendly view, Dark mode." />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding GridText}"
             ToolTip="Text colour for: View, Folders, Flat, Include subfolders, Friendly view, Dark mode." />
                        <Button Grid.Row="0" Grid.Column="2"
            Style="{StaticResource SwatchButtonStyle}"
            Background="{Binding PreviewGridTextBrush}"
            Command="{Binding PickColorCommand}"
            CommandParameter="GridText"
            Height="22"
            ToolTip="Text colour for: View, Folders, Flat, Include subfolders, Friendly view, Dark mode." />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Top Buttons Text" VerticalAlignment="Center"
               ToolTip="Text colour for: Open Folder, Format, Validate, Save, Save As, Clear." />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TopButtonText}"
             ToolTip="Text colour for: Open Folder, Format, Validate, Save, Save As, Clear." />
                        <Button Grid.Row="2" Grid.Column="2"
            Style="{StaticResource SwatchButtonStyle}"
            Background="{Binding PreviewTopButtonTextBrush}"
            Command="{Binding PickColorCommand}"
            CommandParameter="TopButtonText"
            Height="22"
            ToolTip="Text colour for: Open Folder, Format, Validate, Save, Save As, Clear." />
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Top Buttons Background" VerticalAlignment="Center"
               ToolTip="Background colour for: Open Folder, Format, Validate, Save, Save As, Clear." />
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TopButtonBackground}"
             ToolTip="Background colour for: Open Folder, Format, Validate, Save, Save As, Clear." />
                        <Button Grid.Row="4" Grid.Column="2"
            Style="{StaticResource SwatchButtonStyle}"
            Background="{Binding PreviewTopButtonBackgroundBrush}"
            Command="{Binding PickColorCommand}"
            CommandParameter="TopButtonBackground"
            Height="22"
            ToolTip="Background colour for: Open Folder, Format, Validate, Save, Save As, Clear." />
                    </Grid>
                    <TextBlock Text="Pane 1 - File Tree"
                               Style="{StaticResource SectionHeader}"
                               ToolTip="Colors for the left file/folder tree (Pane 1 in the main window)." />
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tree Text" VerticalAlignment="Center"
                                   ToolTip="Text color for the file/folder tree (Pane 1)." />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TreeText}"
                                 ToolTip="Text color for the file/folder tree (Pane 1)." />
                        <Button Grid.Row="0" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewTreeTextBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="TreeText"
                                Height="22"
                                ToolTip="Text color for the file/folder tree (Pane 1)." />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Tree Background" VerticalAlignment="Center"
                                   ToolTip="Background for the file/folder tree (Pane 1)." />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TreeBackground}"
                                 ToolTip="Background for the file/folder tree (Pane 1)." />
                        <Button Grid.Row="2" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewTreeBackgroundBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="TreeBackground"
                                Height="22"
                                ToolTip="Background for the file/folder tree (Pane 1)." />
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Hover Background" VerticalAlignment="Center"
                                   ToolTip="Hover highlight for tree/list items across the app." />
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TreeItemHoverBackground}"
                                 ToolTip="Hover highlight for tree/list items across the app." />
                        <Button Grid.Row="4" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewTreeHoverBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="TreeItemHoverBackground"
                                Height="22"
                                ToolTip="Hover highlight for tree/list items across the app." />
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Selected Background" VerticalAlignment="Center"
                                   ToolTip="Selected highlight for tree/list items across the app." />
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding TreeItemSelectedBackground}"
                                 ToolTip="Selected highlight for tree/list items across the app." />
                        <Button Grid.Row="6" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewTreeSelectedBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="TreeItemSelectedBackground"
                                Height="22"
                                ToolTip="Selected highlight for tree/list items across the app." />
                    </Grid>
                </StackPanel>
                <!-- FRIENDLY VIEW -->
                <StackPanel Visibility="{Binding IsEditingFriendlyView, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Top Menu Bar" Style="{StaticResource SectionHeader}" />
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Menu Text" VerticalAlignment="Center"
                                   ToolTip="Text colour for the top menu bar (File, Edit, View, Help)." />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding MenuText}"
                                 ToolTip="Text colour for the top menu bar (File, Edit, View, Help)." />
                        <Button Grid.Row="0" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewMenuTextBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="MenuText"
                                Height="22"
                                ToolTip="Text colour for the top menu bar (File, Edit, View, Help)." />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Menu Background" VerticalAlignment="Center"
                                   ToolTip="Background colour for the top menu bar (File, Edit, View, Help)." />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding MenuBackground}"
                                 ToolTip="Background colour for the top menu bar (File, Edit, View, Help)." />
                        <Button Grid.Row="2" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewMenuBackgroundBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="MenuBackground"
                                Height="22"
                                ToolTip="Background colour for the top menu bar (File, Edit, View, Help)." />
                    </Grid>
                    <TextBlock Text="Top Bar Controls" Style="{StaticResource SectionHeader}" />
                    <Grid Margin="0,0,0,14">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Top Bar Text" VerticalAlignment="Center"
               ToolTip="Text colour for: View, Folders, Flat, Include subfolders, Friendly view, Dark mode." />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding GridText}"
             ToolTip="Text colour for: View, Folders, Flat, Include subfolders, Friendly view, Dark mode." />
                        <Button Grid.Row="0" Grid.Column="2"
            Style="{StaticResource SwatchButtonStyle}"
            Background="{Binding PreviewGridTextBrush}"
            Command="{Binding PickColorCommand}"
            CommandParameter="GridText"
            Height="22"
            ToolTip="Text colour for: View, Folders, Flat, Include subfolders, Friendly view, Dark mode." />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Top Buttons Text" VerticalAlignment="Center"
               ToolTip="Text colour for: Open Folder, Format, Validate, Save, Save As, Clear." />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TopButtonText}"
             ToolTip="Text colour for: Open Folder, Format, Validate, Save, Save As, Clear." />
                        <Button Grid.Row="2" Grid.Column="2"
            Style="{StaticResource SwatchButtonStyle}"
            Background="{Binding PreviewTopButtonTextBrush}"
            Command="{Binding PickColorCommand}"
            CommandParameter="TopButtonText"
            Height="22"
            ToolTip="Text colour for: Open Folder, Format, Validate, Save, Save As, Clear." />
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Top Buttons Background" VerticalAlignment="Center"
               ToolTip="Background colour for: Open Folder, Format, Validate, Save, Save As, Clear." />
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TopButtonBackground}"
             ToolTip="Background colour for: Open Folder, Format, Validate, Save, Save As, Clear." />
                        <Button Grid.Row="4" Grid.Column="2"
            Style="{StaticResource SwatchButtonStyle}"
            Background="{Binding PreviewTopButtonBackgroundBrush}"
            Command="{Binding PickColorCommand}"
            CommandParameter="TopButtonBackground"
            Height="22"
            ToolTip="Background colour for: Open Folder, Format, Validate, Save, Save As, Clear." />
                    </Grid>
                    <TextBlock Text="Tree / Selectors" Style="{StaticResource SubHeader}" />
                    <TextBlock Text="Pane 1 - File Tree / File List"
                               Style="{StaticResource SectionHeader}"
                               ToolTip="Colors for the left file/folder tree and file list (Pane 1 in the main window)." />
                    <TextBlock Text="Tree &amp; List Items"
                               Style="{StaticResource SubHeader}"
                               ToolTip="Applies to items in the file tree and file list (text, background, hover, selected)." />
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tree Text" VerticalAlignment="Center"
                                   ToolTip="Text color for the left file tree/file list (Pane 1)." />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding TreeText}"
                                 ToolTip="Text color for the left file tree/file list (Pane 1)." />
                        <Button Grid.Row="0" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewTreeTextBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="TreeText"
                                Height="22"
                                ToolTip="Text color for the left file tree/file list (Pane 1)." />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Tree Background" VerticalAlignment="Center"
                                   ToolTip="Background for the left file tree/file list (Pane 1)." />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding TreeBackground}"
                                 ToolTip="Background for the left file tree/file list (Pane 1)." />
                        <Button Grid.Row="2" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewTreeBackgroundBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="TreeBackground"
                                Height="22"
                                ToolTip="Background for the left file tree/file list (Pane 1)." />
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Hover Background" VerticalAlignment="Center"
                                   ToolTip="Hover highlight for items in the left file tree/file list (Pane 1)." />
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TreeItemHoverBackground}"
                                 ToolTip="Hover highlight for items in the left file tree/file list (Pane 1)." />
                        <Button Grid.Row="4" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewTreeHoverBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="TreeItemHoverBackground"
                                Height="22"
                                ToolTip="Hover highlight for items in the left file tree/file list (Pane 1)." />
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Selected Background" VerticalAlignment="Center"
                                   ToolTip="Selected highlight for items in the left file tree/file list (Pane 1)." />
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding TreeItemSelectedBackground}"
                                 ToolTip="Selected highlight for items in the left file tree/file list (Pane 1)." />
                        <Button Grid.Row="6" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewTreeSelectedBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="TreeItemSelectedBackground"
                                Height="22"
                                ToolTip="Selected highlight for items in the left file tree/file list (Pane 1)." />
                    </Grid>
                    <TextBlock Text="Pane 2 - Selector List"
                               Style="{StaticResource SectionHeader}"
                               ToolTip="Colors for the middle selector list and dropdown (Pane 2 in the main window)." />
                    <Grid Margin="0,0,0,14">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Selector Text" VerticalAlignment="Center"
                                   ToolTip="Text color for the selector dropdown and selector items list (Pane 2)." />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding HeaderText}"
                                 ToolTip="Text color for the selector dropdown and selector items list (Pane 2)." />
                        <Button Grid.Row="0" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewHeaderTextBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="HeaderText"
                                Height="22"
                                ToolTip="Text color for the selector dropdown and selector items list (Pane 2)." />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Selector Background" VerticalAlignment="Center"
                                   ToolTip="Background for the selector dropdown + selector list (Pane 2). Use #00000000 for transparent." />
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 Text="{Binding SelectorBackground, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Background for the selector dropdown + selector list (Pane 2). Use #00000000 for transparent." />
                        <Button Grid.Row="2" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewSelectorBackgroundBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="SelectorBackground"
                                Height="22"
                                ToolTip="Background for the selector dropdown + selector list (Pane 2). Use #00000000 for transparent." />
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Combo Text" VerticalAlignment="Center"
           ToolTip="Text color for the Pane 2 selector ComboBox (e.g., Crime)." />
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Pane2ComboText}"
         ToolTip="Text color for the Pane 2 selector ComboBox (e.g., Crime)." />
                        <Button Grid.Row="4" Grid.Column="2"
        Style="{StaticResource SwatchButtonStyle}"
        Background="{Binding PreviewPane2ComboTextBrush}"
        Command="{Binding PickColorCommand}"
        CommandParameter="Pane2ComboText"
        Height="22"
        ToolTip="Text color for the Pane 2 selector ComboBox (e.g., Crime)." />
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Combo Background" VerticalAlignment="Center"
           ToolTip="Background color for the Pane 2 selector ComboBox (e.g., Crime). Use #00000000 for transparent." />
                        <TextBox Grid.Row="6" Grid.Column="1"
         Text="{Binding Pane2ComboBackground, UpdateSourceTrigger=PropertyChanged}"
         ToolTip="Background color for the Pane 2 selector ComboBox (e.g., Crime). Use #00000000 for transparent." />
                        <Button Grid.Row="6" Grid.Column="2"
        Style="{StaticResource SwatchButtonStyle}"
        Background="{Binding PreviewPane2ComboBackgroundBrush}"
        Command="{Binding PickColorCommand}"
        CommandParameter="Pane2ComboBackground"
        Height="22"
        ToolTip="Background color for the Pane 2 selector ComboBox (e.g., Crime). Use #00000000 for transparent." />
                        <TextBlock Grid.Row="8" Grid.Column="0" Text="Dropdown Text" VerticalAlignment="Center"
           ToolTip="Text color for the Pane 2 selector ComboBox dropdown list." />
                        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding Pane2DropdownText}"
         ToolTip="Text color for the Pane 2 selector ComboBox dropdown list." />
                        <Button Grid.Row="8" Grid.Column="2"
        Style="{StaticResource SwatchButtonStyle}"
        Background="{Binding PreviewPane2DropdownTextBrush}"
        Command="{Binding PickColorCommand}"
