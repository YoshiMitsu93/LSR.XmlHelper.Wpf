        CommandParameter="Pane2DropdownBackground"
        Height="22"
        ToolTip="Background color for the Pane 2 selector ComboBox dropdown list. Use #00000000 for transparent." />
                    </Grid>
                    <TextBlock Text="Pane 3 - Details Grid"
                               Style="{StaticResource SectionHeader}"
                               ToolTip="Colors for the Field/Value details table (Pane 3 in the main window)." />
                    <TextBlock Text="General"
                               Style="{StaticResource SubHeader}"
                               ToolTip="Applies to the whole details grid (background, text, borders, row hover)." />
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Grid Background" VerticalAlignment="Center"
               ToolTip="Background for the details grid (Pane 3)." />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding GridBackground}"
             ToolTip="Background for the details grid (Pane 3)." />
                        <Button Grid.Row="0" Grid.Column="2"
            Style="{StaticResource SwatchButtonStyle}"
            Background="{Binding PreviewGridBackgroundBrush}"
            Command="{Binding PickColorCommand}"
            CommandParameter="GridBackground"
            Height="22"
            ToolTip="Background for the details grid (Pane 3)." />
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Grid Border" VerticalAlignment="Center"
               ToolTip="Outer border color for the details grid (Pane 3)." />
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding GridBorder}"
             ToolTip="Outer border color for the details grid (Pane 3)." />
                        <Button Grid.Row="4" Grid.Column="2"
            Style="{StaticResource SwatchButtonStyle}"
            Background="{Binding PreviewGridBorderBrush}"
            Command="{Binding PickColorCommand}"
            CommandParameter="GridBorder"
            Height="22"
            ToolTip="Outer border color for the details grid (Pane 3)." />
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Grid Lines" VerticalAlignment="Center"
               ToolTip="Internal line color between rows and between Field/Value columns (Pane 3)." />
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding GridLines}"
             ToolTip="Internal line color between rows and between Field/Value columns (Pane 3)." />
                        <Button Grid.Row="6" Grid.Column="2"
            Style="{StaticResource SwatchButtonStyle}"
            Background="{Binding PreviewGridLinesBrush}"
            Command="{Binding PickColorCommand}"
            CommandParameter="GridLines"
            Height="22"
            ToolTip="Internal line color between rows and between Field/Value columns (Pane 3)." />
                        <TextBlock Grid.Row="8" Grid.Column="0" Text="Grid Row Hover Background" VerticalAlignment="Center"
               ToolTip="Row hover highlighting inside the details grid (Pane 3)." />
                        <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding GridRowHoverBackground}"
             ToolTip="Row hover highlighting inside the details grid (Pane 3)." />
                        <Button Grid.Row="8" Grid.Column="2"
            Style="{StaticResource SwatchButtonStyle}"
            Background="{Binding PreviewGridRowHoverBrush}"
            Command="{Binding PickColorCommand}"
            CommandParameter="GridRowHoverBackground"
            Height="22"
            ToolTip="Row hover highlighting inside the details grid (Pane 3)." />
                    </Grid>
                    <TextBlock Text="Headers" Style="{StaticResource SubHeader}"
                               ToolTip="Header text colours in the details grid (Pane 3)." />
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Group Header Text"
                                   VerticalAlignment="Center"
                                   ToolTip="Text colour for group headers in the details grid (Pane 3), for example: General." />
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding GridHeaderText}"
                                 ToolTip="Text colour for group headers in the details grid (Pane 3), for example: General." />
                        <Button Grid.Row="0" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewGridHeaderTextBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="GridHeaderText"
                                Height="22"
                                ToolTip="Text colour for group headers in the details grid (Pane 3), for example: General." />
                    </Grid>
                    <TextBlock Text="Selection" Style="{StaticResource SubHeader}"
                               ToolTip="Selection colours in the details grid (Pane 3)." />
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="6" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="Selected Row Background"
                                   VerticalAlignment="Center"
                                   ToolTip="Background colour for a selected row in the details grid (Pane 3)." />
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding GridRowSelectedBackground}"
                                 ToolTip="Background colour for a selected row in the details grid (Pane 3)." />
                        <Button Grid.Row="0" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewGridRowSelectedBackgroundBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="GridRowSelectedBackground"
                                Height="22"
                                ToolTip="Background colour for a selected row in the details grid (Pane 3)." />
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Selected Cell Background"
                                   VerticalAlignment="Center"
                                   ToolTip="Background colour for the selected cell in the details grid (Pane 3)." />
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding GridCellSelectedBackground}"
                                 ToolTip="Background colour for the selected cell in the details grid (Pane 3)." />
                        <Button Grid.Row="2" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewGridCellSelectedBackgroundBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="GridCellSelectedBackground"
                                Height="22"
                                ToolTip="Background colour for the selected cell in the details grid (Pane 3)." />
                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Text="Selected Cell Text"
                                   VerticalAlignment="Center"
                                   ToolTip="Text colour for the selected cell in the details grid (Pane 3)." />
                        <TextBox Grid.Row="4" Grid.Column="1"
                                 Text="{Binding GridCellSelectedText}"
                                 ToolTip="Text colour for the selected cell in the details grid (Pane 3)." />
                        <Button Grid.Row="4" Grid.Column="2"
                                Style="{StaticResource SwatchButtonStyle}"
                                Background="{Binding PreviewGridCellSelectedTextBrush}"
                                Command="{Binding PickColorCommand}"
                                CommandParameter="GridCellSelectedText"
                                Height="22"
                                ToolTip="Text colour for the selected cell in the details grid (Pane 3)." />
                    </Grid>
                    <TextBlock Text="Field Column"
                               Style="{StaticResource SubHeader}"
                               ToolTip="Applies to the Field column (left column) inside the details grid." />
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
