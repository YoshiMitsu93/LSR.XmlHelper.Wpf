<Window x:Class="LSR.XmlHelper.Wpf.Views.AppearanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Appearance"
        Width="720"
        Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">

                <TextBlock Text="Fonts" FontWeight="Bold" Margin="0,0,0,8" />

                <Grid Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="UI Font" VerticalAlignment="Center" />
                    <ComboBox Grid.Row="0" Grid.Column="1"
                              ItemsSource="{Binding FontFamilies}"
                              SelectedItem="{Binding UiFontFamily}"
                              IsEditable="True" />
                    <TextBox Grid.Row="0" Grid.Column="2"
                             Text="{Binding UiFontSize}"
                             VerticalContentAlignment="Center" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Editor Font" VerticalAlignment="Center" />
                    <ComboBox Grid.Row="2" Grid.Column="1"
                              ItemsSource="{Binding FontFamilies}"
                              SelectedItem="{Binding EditorFontFamily}"
                              IsEditable="True" />
                    <TextBox Grid.Row="2" Grid.Column="2"
                             Text="{Binding EditorFontSize}"
                             VerticalContentAlignment="Center" />
                </Grid>

                <TextBlock Text="Colors (Hex: #AARRGGBB or #RRGGBB)" FontWeight="Bold" Margin="0,0,0,8" />

                <Grid Margin="0,0,0,14">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="240" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="App Text" VerticalAlignment="Center" />
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Text}" />
                    <Border Grid.Row="0" Grid.Column="2" Background="{Binding PreviewTextBrush}" Height="22" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="App Background" VerticalAlignment="Center" />
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Background}" />
                    <Border Grid.Row="2" Grid.Column="2" Background="{Binding PreviewBackgroundBrush}" Height="22" />

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Tree Text" VerticalAlignment="Center" />
                    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TreeText}" />
                    <Border Grid.Row="4" Grid.Column="2" Background="{Binding PreviewTreeTextBrush}" Height="22" />

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Tree Background" VerticalAlignment="Center" />
                    <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding TreeBackground}" />
                    <Border Grid.Row="6" Grid.Column="2" Background="{Binding PreviewTreeBackgroundBrush}" Height="22" />

                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Tree Hover Background" VerticalAlignment="Center" />
                    <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding TreeItemHoverBackground}" />
                    <Border Grid.Row="8" Grid.Column="2" Background="{Binding PreviewTreeHoverBrush}" Height="22" />

                    <TextBlock Grid.Row="10" Grid.Column="0" Text="Tree Selected Background" VerticalAlignment="Center" />
                    <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding TreeItemSelectedBackground}" />
                    <Border Grid.Row="10" Grid.Column="2" Background="{Binding PreviewTreeSelectedBrush}" Height="22" />

                    <TextBlock Grid.Row="12" Grid.Column="0" Text="Grid Background" VerticalAlignment="Center" />
                    <TextBox Grid.Row="12" Grid.Column="1" Text="{Binding GridBackground}" />
                    <Border Grid.Row="12" Grid.Column="2" Background="{Binding PreviewGridBackgroundBrush}" Height="22" />

                    <TextBlock Grid.Row="14" Grid.Column="0" Text="Grid Text" VerticalAlignment="Center" />
                    <TextBox Grid.Row="14" Grid.Column="1" Text="{Binding GridText}" />
                    <Border Grid.Row="14" Grid.Column="2" Background="{Binding PreviewGridTextBrush}" Height="22" />

                    <TextBlock Grid.Row="16" Grid.Column="0" Text="Grid Border" VerticalAlignment="Center" />
                    <TextBox Grid.Row="16" Grid.Column="1" Text="{Binding GridBorder}" />
                    <Border Grid.Row="16" Grid.Column="2" Background="{Binding PreviewGridBorderBrush}" Height="22" />

                    <TextBlock Grid.Row="18" Grid.Column="0" Text="Grid Row Hover Background" VerticalAlignment="Center" />
                    <TextBox Grid.Row="18" Grid.Column="1" Text="{Binding GridRowHoverBackground}" />
                    <Border Grid.Row="18" Grid.Column="2" Background="{Binding PreviewGridRowHoverBrush}" Height="22" />
                </Grid>

            </StackPanel>
        </ScrollViewer>

        <DockPanel Grid.Row="1" LastChildFill="False">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Apply" MinWidth="90" Margin="0,0,8,0" Command="{Binding ApplyCommand}" />
                <Button Content="OK" MinWidth="90" Margin="0,0,8,0" Command="{Binding OkCommand}" />
                <Button Content="Cancel" MinWidth="90" Command="{Binding CancelCommand}" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>