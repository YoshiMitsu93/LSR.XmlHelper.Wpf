<Window x:Class="LSR.XmlHelper.Wpf.Views.SelectCompareTargetXmlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pick target XML"
        Width="720"
        Height="480"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="12">
        <TextBlock DockPanel.Dock="Top"
                   Text="Pick the XML in your opened folder to compare against:"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8" />

        <ListBox ItemsSource="{Binding Files}"
                 SelectedItem="{Binding SelectedXmlFile}"
                 DisplayMemberPath="DisplayPath"
                 Margin="0,0,0,10" />

        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    IsCancel="True"
                    MinWidth="90"
                    Margin="0,0,8,0" />
            <Button Content="OK"
                    Command="{Binding OkCommand}"
                    IsDefault="True"
                    MinWidth="90" />
        </StackPanel>
    </DockPanel>
</Window>
