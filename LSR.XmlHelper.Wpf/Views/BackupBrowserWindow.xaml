<Window
    x:Class="LSR.XmlHelper.Wpf.Views.BackupBrowserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Backup Browser"
    Width="980"
    Height="560"
    Background="{Binding Appearance.BackupBrowserWindowBackgroundBrush}"
    FontFamily="{Binding Appearance.UiFontFamily}"
    FontSize="{Binding Appearance.UiFontSize}"
    Foreground="{Binding Appearance.BackupBrowserWindowTextBrush}"
    WindowStartupLocation="CenterOwner"
    WindowState="Maximized">

    <Window.Resources>
        <CollectionViewSource x:Key="BackupsView" Source="{Binding Backups}">
            <CollectionViewSource.GroupDescriptions>
            <PropertyGroupDescription PropertyName="SourceXmlDisplay" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="*" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Foreground="{Binding Appearance.BackupBrowserWindowHeaderTextBrush}"
                Text="Backups folder:" />
            <TextBlock
                Opacity="0.85"
                Text="{Binding BackupFolder}"
                TextWrapping="Wrap" />
            <TextBlock
                Margin="0,6,0,0"
                Opacity="0.65"
                Text="Drag and drop a backup .xml file into this window to add it."
                TextWrapping="Wrap" />
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Background="{Binding Appearance.BackupBrowserWindowControlBackgroundBrush}"
                BorderBrush="{Binding Appearance.BackupBrowserWindowControlBorderBrush}"
                BorderThickness="1">
                <DockPanel LastChildFill="True">
                    <TextBlock
                        Padding="8,6"
                        Background="{Binding Appearance.BackupBrowserWindowHeaderBackgroundBrush}"
                        DockPanel.Dock="Top"
                        FontWeight="Bold"
                        Foreground="{Binding Appearance.BackupBrowserWindowHeaderTextBrush}"
                        Text="XML filter" />
                    <ListBox
                        Background="{Binding Appearance.BackupBrowserWindowControlBackgroundBrush}"
                        BorderThickness="0"
                        DisplayMemberPath="DisplayText"
                        Foreground="{Binding Appearance.BackupBrowserWindowTextBrush}"
                        ItemsSource="{Binding XmlFilters}"
                        SelectedItem="{Binding SelectedXmlFilter}">
                        <ListBox.Resources>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="{Binding DataContext.Appearance.BackupBrowserWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                                <Setter Property="Padding" Value="8,6" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                            <Border
	                                                x:Name="Root"
	                                                Background="{TemplateBinding Background}"
	                                                SnapsToDevicePixels="True">
                                                <ContentPresenter
	                                                    Margin="{TemplateBinding Padding}"
	                                                    VerticalAlignment="Center"
	                                                    HorizontalAlignment="Left"
	                                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Root" Property="Background" Value="{Binding DataContext.Appearance.BackupBrowserWindowXmlFilterHoverBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Root" Property="Background" Value="{Binding DataContext.Appearance.BackupBrowserWindowXmlFilterSelectedBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{Binding DataContext.Appearance.BackupBrowserWindowXmlFilterHoverBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{Binding DataContext.Appearance.BackupBrowserWindowXmlFilterSelectedBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.Resources>
                    </ListBox>
                </DockPanel>
            </Border>

            <GridSplitter
                Grid.Column="1"
                Width="8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{Binding Appearance.BackupBrowserWindowBackgroundBrush}" />

            <Border
                Grid.Column="2"
                AllowDrop="True"
                Background="{Binding Appearance.BackupBrowserWindowControlBackgroundBrush}"
                BorderBrush="{Binding Appearance.BackupBrowserWindowControlBorderBrush}"
                BorderThickness="1"
                Drop="BackupBrowserWindow_OnDrop"
                PreviewDragOver="BackupBrowserWindow_OnPreviewDragOver">
                <ListView
                    Background="{Binding Appearance.BackupBrowserWindowControlBackgroundBrush}"
                    BorderThickness="0"
                    Foreground="{Binding Appearance.BackupBrowserWindowTextBrush}"
                    ItemsSource="{Binding Source={StaticResource BackupsView}}"
                    SelectedItem="{Binding SelectedBackup}">
                    <ListView.Resources>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="Background" Value="{Binding DataContext.Appearance.BackupBrowserWindowHeaderBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.BackupBrowserWindowHeaderTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Padding" Value="8,4" />
                        </Style>

                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.BackupBrowserWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                            <Setter Property="Padding" Value="6,3" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{Binding DataContext.Appearance.BackupBrowserWindowListHoverBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{Binding DataContext.Appearance.BackupBrowserWindowListSelectedBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.Resources>

                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border
                                        Padding="8,6"
                                        Background="{Binding DataContext.Appearance.BackupBrowserWindowHeaderBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                        BorderBrush="{Binding DataContext.Appearance.BackupBrowserWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                        BorderThickness="0,0,0,1">
                                        <TextBlock
                                            FontWeight="Bold"
                                            Foreground="{Binding DataContext.Appearance.BackupBrowserWindowHeaderTextBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                            Text="{Binding Name}" />
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>

                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="170"
                                DisplayMemberBinding="{Binding LastWriteText}"
                                Header="Date" />
                            <GridViewColumn
                                Width="560"
                                DisplayMemberBinding="{Binding FileName}"
                                Header="Backup file" />
                            <GridViewColumn
                                Width="90"
                                DisplayMemberBinding="{Binding SizeText}"
                                Header="Size" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>

        <TextBlock
            Grid.Row="4"
            Foreground="{Binding Appearance.BackupBrowserWindowTextBrush}"
            Text="{Binding Status}" />

        <StackPanel
            Grid.Row="6"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <StackPanel.Resources>
                
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Foreground" Value="{Binding DataContext.Appearance.BackupBrowserWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                    <Setter Property="Background" Value="{Binding DataContext.Appearance.BackupBrowserWindowButtonBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                    <Setter Property="BorderBrush" Value="{Binding DataContext.Appearance.BackupBrowserWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="Padding" Value="10,6" />
                    <Setter Property="MinWidth" Value="120" />
                    <Setter Property="Margin" Value="0,0,8,0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border
                                    x:Name="Root"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    SnapsToDevicePixels="True">
                                    <ContentPresenter
                                        Margin="{TemplateBinding Padding}"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        RecognizesAccessKey="True" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Root" Property="Background" Value="{Binding DataContext.Appearance.BackupBrowserWindowButtonHoverBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.6" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>

            <Button
                MinWidth="90"
                Command="{Binding RefreshCommand}"
                Content="Refresh" />
            <Button
                MinWidth="110"
                Command="{Binding OpenBackupFolderCommand}"
                Content="Open Folder" />
            <Button Command="{Binding RestoreCommand}" Content="Restore Selected" />
            <Button
                Margin="0,0,0,0"
                Command="{Binding CancelCommand}"
                Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>
