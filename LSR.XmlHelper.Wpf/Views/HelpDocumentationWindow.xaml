<Window
    x:Class="LSR.XmlHelper.Wpf.Views.HelpDocumentationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Documentation"
    Width="980"
    Height="700"
    Background="{Binding Appearance.DocumentationWindowBackgroundBrush}"
    FontFamily="{Binding Appearance.UiFontFamily}"
    FontSize="{Binding Appearance.UiFontSize}"
    FontStyle="{Binding Appearance.UiFontStyle}"
    FontWeight="{Binding Appearance.UiFontWeight}"
    Foreground="{Binding Appearance.DocumentationWindowTextBrush}"
    Icon="/Assets/AppIcon.ico"
    WindowStartupLocation="CenterOwner"
    WindowState="Maximized">

    <Window.Resources>
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="{Binding DataContext.Appearance.DocumentationWindowControlBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.DocumentationWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.Appearance.DocumentationWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,6" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{Binding DataContext.Appearance.DocumentationWindowControlBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.DocumentationWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.Appearance.DocumentationWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{Binding DataContext.Appearance.DocumentationWindowButtonBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.DocumentationWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.Appearance.DocumentationWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="Border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{Binding DataContext.Appearance.DocumentationWindowButtonHoverBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{Binding DataContext.Appearance.DocumentationWindowControlBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.DocumentationWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="BorderBrush" Value="{Binding DataContext.Appearance.DocumentationWindowControlBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{Binding DataContext.Appearance.DocumentationWindowTextBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            x:Name="ItemBorder"
                            Padding="2"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{Binding DataContext.Appearance.DocumentationWindowListHoverBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{Binding DataContext.Appearance.DocumentationWindowListSelectedBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="12">


        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False">
            <StackPanel>
                <TextBlock
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="Documentation" />
                <TextBlock
                    Margin="0,4,0,0"
                    Opacity="0.75"
                    Text="{Binding AppVersion, StringFormat=Version: {0}}" />
                <TextBlock
                    Margin="0,2,0,0"
                    Opacity="0.75"
                    Text="Created by Y0sh1M1tsu" />
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="1" Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBox
                    Grid.Row="0"
                    Margin="0,0,0,8"
                    Padding="8,6"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    ToolTip="Type to search topics (example: format, validate, backup, saved edits)" />

                <ListBox
                    Grid.Row="1"
                    BorderBrush="{Binding Appearance.DocumentationWindowControlBorderBrush}"
                    BorderThickness="1"
                    ItemsSource="{Binding TopicsView}"
                    SelectedItem="{Binding SelectedTopic}">
                    <ListBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,8,0,4"
                                        Padding="6,4"
                                        Background="{Binding DataContext.Appearance.DocumentationWindowHeaderBackgroundBrush, RelativeSource={RelativeSource AncestorType=Window}}">
                                        <TextBlock
                                            FontWeight="SemiBold"
                                            Foreground="{Binding DataContext.Appearance.DocumentationWindowHeaderTextBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                            Text="{Binding Name}" />
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListBox.GroupStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="6,6">
                                <TextBlock
                                    FontWeight="SemiBold"
                                    Text="{Binding Title}"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Margin="0,3,0,0"
                                    Opacity="0.75"
                                    Text="{Binding Summary}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <GridSplitter
                Grid.Column="1"
                Width="12"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ShowsPreview="True" />

            <Border
                Grid.Column="2"
                Padding="12"
                BorderBrush="{Binding Appearance.DocumentationWindowControlBorderBrush}"
                BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{Binding SelectedTopic.Title}"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Margin="0,10,0,0"
                            Text="{Binding SelectedTopic.Body}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="90"
                Click="Close_Click"
                Content="Close"
                IsDefault="True" />
        </StackPanel>
    </Grid>
</Window>
