<Window x:Class="LSR.XmlHelper.Wpf.Views.HelpDocumentationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Documentation"
        Icon="/Assets/AppIcon.ico"
        Height="700"
        Width="980"
        WindowStartupLocation="CenterOwner"
        Background="White"
        Foreground="Black"
        FontFamily="{Binding Appearance.UiFontFamily}"
        FontSize="{Binding Appearance.UiFontSize}"
        FontWeight="{Binding Appearance.UiFontWeight}"
        FontStyle="{Binding Appearance.UiFontStyle}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False">
            <StackPanel>
                <TextBlock FontSize="18" FontWeight="SemiBold" Text="Documentation" />
                <TextBlock Margin="0,4,0,0" Opacity="0.75" Text="{Binding AppVersion, StringFormat=Version: {0}}" />
                <TextBlock Margin="0,2,0,0" Opacity="0.75" Text="Created by Y0sh1M1tsu" />
            </StackPanel>
        </DockPanel>

        <Grid Grid.Row="1" Margin="0,12,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0"
                         Margin="0,0,0,8"
                         Padding="8,6"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Type to search topics (example: format, validate, backup, saved edits)" />

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding TopicsView}"
                         SelectedItem="{Binding SelectedTopic}"
                         BorderThickness="1"
                         BorderBrush="{Binding Appearance.GridBorderBrush}">
                    <ListBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border Margin="0,8,0,4"
                                            Padding="6,4"
                                            Background="White">
                                        <TextBlock FontWeight="SemiBold" Text="{Binding Name}" />
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListBox.GroupStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="6,6">
                                <TextBlock FontWeight="SemiBold" Text="{Binding Title}" TextWrapping="Wrap"/>
                                <TextBlock Margin="0,3,0,0" Opacity="0.75" Text="{Binding Summary}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <GridSplitter Grid.Column="1"
                          Width="12"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          ShowsPreview="True" />

            <Border Grid.Column="2"
                    Padding="12"
                    BorderThickness="1"
                    BorderBrush="{Binding Appearance.GridBorderBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock FontSize="16"
                                   FontWeight="SemiBold"
                                   Text="{Binding SelectedTopic.Title}"
                                   TextWrapping="Wrap" />
                        <TextBlock Margin="0,10,0,0"
                                   Text="{Binding SelectedTopic.Body}"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="90" IsDefault="True" Content="Close" Click="Close_Click" />
        </StackPanel>
    </Grid>
</Window>
